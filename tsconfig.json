{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "outDir": "out",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "compileOnSave": true
}
